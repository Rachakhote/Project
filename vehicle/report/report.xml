<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_report_vehicle" model="ir.actions.report">
            <field name="name">Quotation</field>
            <field name="model">vehicle.management</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vehicle.report_vehicle_management</field>
            <field name="report_file">vehicle.report_vehicle_management</field>
            <field name="binding_model_id" ref="model_vehicle_management"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Main template -->
        <template id="report_vehicle_management">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="vehicle.report_vehicle_management_document"/>
                </t>
            </t>
        </template>

        <!-- Translatable template -->
        <template id="report_vehicle_management_document">
            <!-- Re-browse of the record with the partner lang -->
            <t t-set="doc"/>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- View Kanban -->
        <record id="view_management_kanban" model="ir.ui.view">
            <field name="name">vehicle.management.kanban</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <kanban string="Vehicle Management Kanban">
                    <field name="name"/>
                    <field name="model_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="o_kanban_image"
                                     t-attf-style="background-image:url('#{kanban_image('vehicle.management', 'image_128')}')"/>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="model_id"/>
                                    </strong>
                                    <ul>
                                        <il>
                                            <field name="objective"/>
                                        </il>
                                    </ul>
                                    <ul>
                                        <il>
                                            <field name="user_id"/>
                                        </il>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>
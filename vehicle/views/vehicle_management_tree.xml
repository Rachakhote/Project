<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- View Tree -->
        <record id="view_management_tree" model="ir.ui.view">
            <field name="name">vehicle.management.tree</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <tree string="Vehicle Management Tree">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="driver_id"/>
                    <field name="objective" string="จุดประสงค์ในการขอใช้รถ"/>
                    <field name="location"/>
                    <field name="budget" string="งบประมาณ"/>
                    <field name="state" decoration-danger="state == 'cancel'"/>
                    <field name="user_id" string="ผู้ขอใช้"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
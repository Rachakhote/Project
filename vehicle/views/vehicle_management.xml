        <record id="view_management_tree" model="ir.ui.view">
            <field name="name">vehicle.management.tree</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="driver_id"/>
                    <field name="objective"/>
                    <field name="location"/>
                    <field name="distance"/>
                    <field name="travel_date"/>
                    <field name="return_date"/>
                    <field name="oil_budget"/>
                    <field name="n_teacher"/>
                    <field name="n_student"/>
                    <field name="note"/>
                    <field name="user_id"/>
<!--                    <field name="state_id"/>-->
                </tree>
            </field>
        </record>

        <record id="view_management_form" model="ir.ui.view">
            <field name="name">vehicle.management.form</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="driver_id"/>
                                <field name="objective"/>
                            </group>
                            <group>
                                <field name="location"/>
                                <field name="distance"/>
                                <field name="travel_date"/>
                                <field name="return_date"/>
                            </group>
                            <group>
                                <field name="oil_budget"/>
                                <field name="n_teacher"/>
                                <field name="n_student"/>
                                <field name="note"/>
                            </group>
                            <group>
                                <field name="user_id"/>
<!--                                <field name="state_id"/>-->
                            </group>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="view_management_search" model="ir.ui.view">
            <field name="name">vehicle.management.search</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="distance"/>
                    <field name="n_teacher"/>
                    <field name="n_student"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="management_action">
            <field name="name">Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vehicle.management</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="vehicle_root" name="Vehicle" action="management_action" sequence="10"/>


    </data>
</odoo>
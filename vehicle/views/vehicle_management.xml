<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_management_calendar" model="ir.ui.view">
            <field name="name">vehicle.management.calendar</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <calendar date_start="start_date" date_stop="end_date" color="model_id" quick_add="False">
                    <field name="model_id"/>
                    <field name="user_id"/>
                </calendar>
            </field>
        </record>

        <record id="view_management_kanban" model="ir.ui.view">
            <field name="name">vehicle.management.kanban</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="driver_id"/>
                    <field name="objective"/>
                    <field name="location"/>
                    <field name="distance"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="teacher"/>
                    <field name="student"/>
                    <field name="budget"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image"
                                     t-attf-style="background-image:url('#{kanban_image('vehicle.management', 'image_128')}')"/>
                                <div class="o_kanban_details">
                                    <ul>
                                        <il>
                                            <field name="name"/>
                                        </il>
                                        <il>
                                            <field name="model_id"/>
                                        </il>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_management_tree" model="ir.ui.view">
            <field name="name">vehicle.management.tree</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="driver_id"/>
                    <field name="objective"/>
                    <field name="location"/>
                    <field name="distance"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="teacher"/>
                    <field name="student"/>
                    <field name="budget"/>
                </tree>
            </field>
        </record>

        <record id="view_management_form" model="ir.ui.view">
            <field name="name">vehicle.management.form</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name"/>
                        <field name="image_128" widget='image' class="oe_avatar"/>
                        <p/>
                        <div class="oe_title">
                            <label for="model_id"/>
                            <h2>
                                <field name="model_id" placeholder="e.g. Model S"/>
                            </h2>
                        </div>
                        <p/>
                        <group>
                            <group>
                                <field name="objective"/>
                                <field name="location"/>
                                <field name="distance"/>
                                <field name="budget"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="teacher"/>
                                <field name="student"/>
<!--                                <field name="state"/>-->
                                <field name="driver_id"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="view_management_search" model="ir.ui.view">
            <field name="name">vehicle.management.search</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="driver_id"/>
                    <field name="objective"/>
                    <field name="user_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="management_action">
            <field name="name">Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vehicle.management</field>
            <field name="view_mode">tree,kanban,calendar,form</field>
        </record>

        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="vehicle_root" name="Vehicle" action="management_action" sequence="10"/>

    </data>
</odoo>
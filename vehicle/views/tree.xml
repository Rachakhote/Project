<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--   View Tree   -->
        <record id="vehicle_view_tree" model="ir.ui.view">
            <field name="name">Vehicle Reservation Tree</field>
            <field name="model">vehicle.reservation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Number"/>
                    <field name="model_id" string="Model"/>
                    <field name="driver_id" string="Driver"/>
                    <field name="objective" string="Objective"/>
                    <field name="location" string="Location"/>
                    <field name="budget" string="Budget"/>
                    <field name="state" decoration-danger="state == 'cancel'" string="State"/>
                    <field name="user_id" string="User"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
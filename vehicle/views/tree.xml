<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--   View Tree   -->
        <record id="vehicle_view_tree" model="ir.ui.view">
            <field name="name">Vehicle Reservation Tree</field>
            <field name="model">vehicle.reservation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="No"/>
                    <field name="model_id" string="Model" widget="many2one_avatar"/>
                    <field name="driver_id" string="Driver"/>
                    <field name="objective" string="Objective"/>
                    <field name="location" string="Location"/>
                    <field name="state"
                           decoration-info="state == 'draft' or state == 'authorities' or state == 'department'
                           or state == 'director' or state == 'president'"
                           decoration-success="state == 'chancellor'" decoration-danger="state == 'cancel'"
                           widget="badge" optional="show" string="State"/>
                    <field name="user_id" widget="many2one_avatar_user" optional="show" string="User"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
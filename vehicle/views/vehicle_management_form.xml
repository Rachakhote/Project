<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- View Form -->
        <record id="view_management_form" model="ir.ui.view">
            <field name="name">vehicle.management.form</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <form string="Vehicle Management Form">
                    <header>
                        <button name="button_confirm" string="ยืนยันเอกสาร"
                                states="draft"
                                class="btn-primary" type="object"/>
                        <button name="button_authorities" string="ส่งให้หัวหน้าอนุมัติ"
                                states="authorities"
                                class="btn-primary" type="object"/>
                        <button name="button_department" string="ส่งให้ผู้อำนวยการอนุมัติ"
                                states="department head"
                                class="btn-primary" type="object"/>
                        <button name="button_director" string="ส่งให้รองอธิการอนุมัติ"
                                states="director"
                                class="btn-primary" type="object"/>
                        <button name="button_president" string="ส่งให้อธิการอนุมัติ"
                                states="vice president"
                                class="btn-primary" type="object"/>
                        <button name="button_chancellor" string="ยืนยัน"
                                states="chancellor"
                                class="btn-primary" type="object"/>
                        <button name="button_cancel"
                                states="draft,authorities,department head,director,vice president,chancellor"
                                string="ยกเลิก" type="object"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,authorities,department head,director,vice president,chancellor"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" readonly="1"/>
                            <field name="image_128" widget='image' class="oe_avatar"/>
                        </h1>
                        <div class="oe_title">
                            <label for="model_id" string="Model"/>
                            <h2>
                                <field name="model_id" placeholder="เลือกประเภทรถ"/>
                            </h2>
                        </div>
                        <p/>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="position"/>
                                <field name="agency"/>
                                <field name="objective"/>
                                <field name="location"/>
                            </group>
                            <group>
                                <label for="teacher_number"/>
                                <div class="o_row" name="teacher_number">
                                    <field name="teacher_number"/>
                                    <span>คน</span>
                                </div>
                                <label for="student_number"/>
                                <div class="o_row" name="student_number">
                                    <field name="student_number"/>
                                    <span>คน</span>
                                </div>
                                <field name="responsible"/>
                                <field name="phone_number"/>
                                <field name="office_number"/>
                            </group>
                            <group>
                                <label for="distance"/>
                                <div class="o_row" name="distance">
                                    <field name="distance"/>
                                    <span>กิโลเมตร</span>
                                </div>
                                <field name="budget" widget="radio"/>
                                <field name="note"
                                       attrs="{'invisible': [('budget','!=','other')], 'required': [('budget','=','other')]}"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group col="2" string="เจ้าหน้าที่ธุรการ" groups="vehicle.group_vehicle_authorities">
                                <field name="record" widget="radio"/>
                                <field name="driver_id"/>
                                <field name="attendant"/>
                                <field name="authorities"/>
                                <field name="approve_date"/>
                            </group>
                            <group col="2" string="หัวหน้าฝ่ายยานพาหนะ" groups="vehicle.group_vehicle_department_head">
                                <field name="propose" widget="radio"/>
                                <field name="because"/>
                                <field name="department_head"/>
                                <field name="approve_date01"/>
                            </group>
                            <group col="2" string="ผู้อำนวยการสำนักงานอธิการบดี"
                                   groups="vehicle.group_vehicle_director">
                                <field name="propose_02" widget="radio"/>
                                <field name="because_02"/>
                                <field name="office_director"/>
                                <field name="approve_date02"/>
                            </group>
                            <group col="2" string="รองอธิการบดีฝ่ายบริหาร"
                                   groups="vehicle.group_vehicle_vice_president">
                                <field name="propose_03" widget="radio"/>
                                <field name="because_03"/>
                                <field name="vice_president"/>
                                <field name="approve_date03"/>
                            </group>
                            <group col="2" string="อธิการบดีมหาวิทยาลัยราชภัฏบุรีรัมย์"
                                   groups="vehicle.group_vehicle_chancellor">
                                <field name="propose_04" widget="radio"/>
                                <field name="because_04"/>
                                <field name="chancellor"/>
                                <field name="approve_date04"/>
                            </group>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <!-- Actions Act Window ปุ่มต่างๆ Delete Duplicate -->
        <record model="ir.actions.act_window" id="management_action">
            <field name="name">Vehicle Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vehicle.management</field>
            <field name="view_mode">tree,kanban,calendar,pivot,form</field>
        </record>

        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="vehicle_root" name="Vehicle" action="management_action" sequence="10"/>

    </data>
</odoo>
